package basics;

public class Factorial {
	
	// fac(0) = 1
	// fac(1) = f(1)*f(0) = 1*1	= 1
	// fac(2) = f(2)*f(1)*f(0) = 2*1*1 = 2
	// fac(3) = f(3)*fac(2)*fac(1)*fac(0) = 3*2*1*1 = 6
	public static void main(String[] args) {
		
		System.out.println(fac(3));
	}
	
	public static int fac(int n) {
		if(n == 0) {
			return 1;
		}
		else if(n == 1) {
			return 1;
		}
		
		return (fac(n-1)*fac(n-2));
	}
}
