package basics;

public class FibonnaciApp {

	public static void main(String[] args) {
	// Fibonnaci number is defined by the sum of the 2 previous fibonnaci numbers
	//
	//	fib(0) = 0
	//	fib(1) = 1
	//  fib(2) = fib(0) + fib(1) = 0+1=1
	//  fib(3) = fib(2) + fib(1) = 1+1
	// fib(4) = fib(3) + fib(2) = 2 +1 
		
		/*
		 * int firstNumber = 0; int secondNumber = 1;
		 * 
		 * System.out.print(firstNumber+" "+secondNumber); int third; int number = 10;
		 * int i; for(i = 2;i<number;++i) { third = firstNumber+secondNumber;
		 * System.out.print(" "+third); firstNumber = secondNumber; secondNumber =
		 * third;
		 * 
		 * 
		 * }
		 */
		fib(10);
		
	}
		public static int fib(int n) {
			if(n == 0) {
				return 0;
			}
			else if (n == 1) {
				return 1;
			}
			return (fib(n-1)+fib(n-2));
			}
		
	}
}
